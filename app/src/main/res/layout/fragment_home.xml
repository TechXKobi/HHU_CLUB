<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="de.hhu.hhu_go.ui.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:fontFamily="@font/clashgrotesk_semibold"
        android:layout_marginBottom="30dp"
        android:textSize="30sp"
        android:textColor="@color/NavyBlue2"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:fontFamily="@font/clashgrotesk_regular"
        android:layout_marginBottom="30dp"
        android:textSize="23sp"
        android:textColor="@color/NavyBlue"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hot_articles"
        android:fontFamily="@font/clashgrotesk_semibold"
        android:layout_marginBottom="10dp"
        android:textSize="23sp"
        android:textColor="@color/NavyBlue"
        android:layout_gravity="start" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_article_recycler"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clickHint"
        android:fontFamily="@font/clashgrotesk_regular"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:textSize="23sp"
        android:textColor="@color/NavyBlue"
        android:layout_gravity="center_horizontal" />
</LinearLayout>