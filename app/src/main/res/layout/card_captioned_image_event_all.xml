<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="180sp"
    android:layout_height="280sp"
    android:padding="5sp"
    android:layout_margin="10sp"
    android:outlineAmbientShadowColor="@color/NavyBlue2"
    android:outlineSpotShadowColor="@color/NavyBlue2"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="180sp"
        android:layout_height="170sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150sp"
        android:fontFamily="@font/clashgrotesk_semibold"
        android:textColor="@color/NavyBlue2"
        android:gravity="center_horizontal"
        android:text="TITEL"/>

    <TextView
        android:id="@+id/subhead"
        android:layout_marginTop="185sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:textColor="@color/NavyBlue"
        android:text="Subtitel" />

    <TextView
        android:id="@+id/creator"
        android:layout_marginTop="230sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:textColor="@color/NavyBlue"
        android:text="Planner" />
</androidx.cardview.widget.CardView>