<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="de.hhu.hhu_go.ui.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/messengerTitle"
        android:fontFamily="@font/clashgrotesk_semibold"
        android:textSize="30sp"
        android:textColor="@color/NavyBlue2"
        android:layout_margin="15sp"
        android:layout_gravity="center_horizontal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messaging_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/startChat"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:fontFamily="@font/clashgrotesk_semibold"
        android:text="@string/startChat"
        android:textColor="@color/white"/>
</LinearLayout>