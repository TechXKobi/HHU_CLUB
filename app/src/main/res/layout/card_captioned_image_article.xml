<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:padding="12dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:outlineAmbientShadowColor="@color/NavyBlue2"
    android:outlineSpotShadowColor="@color/NavyBlue2"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="250pt"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/clashgrotesk_semibold"
        android:textColor="@color/NavyBlue2"
        android:gravity="center_horizontal"
        android:text="TITEL"/>

    <TextView
        android:id="@+id/subhead"
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:textColor="@color/NavyBlue"
        android:text="Subtitel" />
</androidx.cardview.widget.CardView>