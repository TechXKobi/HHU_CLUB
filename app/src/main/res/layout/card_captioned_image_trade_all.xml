<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="12sp"
    android:layout_width="350sp"
    android:layout_height="170sp"
    android:outlineAmbientShadowColor="@color/NavyBlue2"
    android:outlineSpotShadowColor="@color/NavyBlue2"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/header_image"
            android:layout_width="180sp"
            android:layout_height="170sp"
            android:scaleType="fitStart" />

        <LinearLayout
            android:layout_width="180sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:fontFamily="@font/clashgrotesk_semibold"
                android:textColor="@color/NavyBlue2"
                android:scaleType="fitStart"
                android:layout_margin="10sp"
                android:text="TITEL"/>

            <TextView
                android:id="@+id/subhead"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:textColor="@color/NavyBlue"
                android:scaleType="fitStart"
                android:text="Subtitel" />

            <TextView
                android:id="@+id/trader"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textColor="@color/NavyBlue"
                android:scaleType="fitStart"
                android:text="Planner" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>